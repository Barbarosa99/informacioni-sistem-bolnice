<Window x:Class="HospitalApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalApplication"
        mc:Ignorable="d"
                Title="MainWindow" Height="800" Width="500">
    <Grid Margin="10">
        <Frame x:Name="Main" NavigationUIVisibility="Hidden"></Frame>
        <StackPanel>
            <Grid Margin="0 0 0 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button x:Name="Patient" Click="Patient_Click" Margin="0 0 10 0" Grid.Column="0" Content="Patient"/>
                <Button x:Name="Doctor" Click="Doctor_Click" Margin="0 0 10 0" Grid.Column="1" Content="Doctor"/>
                <Button x:Name="Secretary" Click="Secretary_Click" Margin="0 0 10 0" Grid.Column="2" Content="Secretary"/>
                <Button x:Name="Manager" Click="Manager_Click" Margin="0 0 10 0" Grid.Column="3" Content="Manager"/>
            </Grid>

        </StackPanel>
    </Grid>
</Window>
