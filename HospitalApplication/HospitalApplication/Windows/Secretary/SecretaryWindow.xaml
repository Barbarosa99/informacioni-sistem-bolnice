<Window x:Class="HospitalApplication.Windows.Secretary.SecretaryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalApplication.Windows.Secretary"
        mc:Ignorable="d"
        Title="SecretaryWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Margin="0 0 10 0" Click="RegisterPatient_Click" Grid.Column="0" Content="Register Patient"/>
                <Button Margin="0 0 10 0" Click="DeletePatient_Click" Grid.Column="1" Content="Delete Patient"/>
                <Button Margin="0 0 10 0" Click="EditPatient_Click" Grid.Column="2" Content="Edit Patient"/>
                <Button Margin="0 0 10 0" Click="AllPatients_Click" Grid.Column="3" Content="All Patients"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
