<Window x:Class="HospitalApplication.Windows.Doctor1.DoctorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalApplication.Windows.Doctor1"
        mc:Ignorable="d"
        Title="DoctorWindow" Height="450" Width="800">
    <Grid>
        <Grid Margin="0,8,0,-8">
            <Button Content="Schedule examination" x:Name="btnSchedule" Margin="59,177,532,192" Click="btnSchedule_Click" FontSize="18" FontWeight="Bold" Background="#FF54FF21" RenderTransformOrigin="0.536,1.815"/>
            <Button Content="Cancel examination" x:Name="btnCancel" Margin="458,177,123,192" Click="btnCancel_Click" FontSize="18" FontWeight="Bold" Background="#FF49FF13" RenderTransformOrigin="0.521,1.507"/>
            <Button Content="Show examinations" x:Name="btnShow"  Margin="59,296,532,73" Click="btnShow_Click" FontSize="18" FontWeight="Bold" Background="#FF4DFF19"/>
            <Button Content="Move examination" x:Name="btnMove" Margin="458,296,123,73" Click="btnMove_Click" FontSize="18" FontWeight="Bold" Background="#FF4DFF19"/>
            <Label Content="Examination or operation managment" Margin="140,44,100,336" FontSize="24" FontWeight="Bold"/>



        </Grid>

    </Grid>
</Window>
